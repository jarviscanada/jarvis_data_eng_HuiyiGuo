class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] result = new int[2]; // for exactly one solution
        List myList = new ArrayList(); //for multiple solution
       
        Map<Integer, Integer> map = new HashMap<Integer, Integer>();
        for (int i = 0; i < nums.length; i++) {
            int expect_nums = target - nums[i];
            if (map.containsKey(expect_nums)){
                result[0] = map.get(expect_nums);
                result[1] = i;
                
                return result;
            }
            map.put(nums[i], i);
        }
        return result;
        
    }
}
